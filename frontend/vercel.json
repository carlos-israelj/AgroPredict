{
  "name": "agropredict-frontend",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_CONTRACT_ADDRESS": "@react_app_contract_address",
    "REACT_APP_NETWORK": "@react_app_network", 
    "REACT_APP_CHAIN_ID": "@react_app_chain_id",
    "REACT_APP_EXPLORER_URL": "@react_app_explorer_url"
  },
  "build": {
    "env": {
      "REACT_APP_CONTRACT_ADDRESS": "@react_app_contract_address",
      "REACT_APP_NETWORK": "@react_app_network",
      "REACT_APP_CHAIN_ID": "@react_app_chain_id", 
      "REACT_APP_EXPLORER_URL": "@react_app_explorer_url"
    }
  }
}